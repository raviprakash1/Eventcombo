@model IList<CMS.Models.MessageTemplate>
@using CMS.Models
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())

{
  <!-- Start: Content-Wrapper -->
<section id="content_wrapper">

    <!-- Start: Topbar -->
    <header id="topbar" class="alt">
        <div class="topbar-left">
            <ol class="breadcrumb">

                <li class="crumb-icon">
                    <a href="dashboard.html">
                        <span class="glyphicon glyphicon-home"></span>
                    </a>
                </li>
                <li class="crumb-active">
                    Dashboard
                </li>
            </ol>
        </div>

    </header>
    <!-- End: Topbar -->
    <!-- Begin: Content -->
    <div id="content" class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">

                <!-- Input Fields -->
                <div class="panel">
                    <div class="panel-heading">
                        <span class="panel-title">My Account Form</span>
                    </div>
                    <div class="panel-body admin-form">
                        <!-- <div class="col-md-12">
                          <div class="alert alert-success alert-dismissable">
                            <button class="close" aria-hidden="true" data-dismiss="alert" type="button">&#215;</button>
                            <i class="fa fa-info pr10"></i>
                            <strong>Oh snap!</strong>
                            You need to&#10;
                            <a class="alert-link" href="#">Change a few things up</a>
                            and try again.&#10;
                          </div>
                        </div> -->
                        <div class="col-md-12">

                               @for (var i = 0; i < Model.Count; i++)
                               {
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="section">
                                            @Html.TextBoxFor(x => x[i].Form_Tag,new  { @class = "field form-control", @readonly = "readonly" })
                                            @Html.HiddenFor(x => x[i].Form_Name)
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="section">
                                            <label class="field">
                                             @Html.TextBoxFor(x => x[i].Message, new { @class = "gui-input", id = "from", placeholder = "Message" })
                                                @*<input type="text" name="from" id="from" class="gui-input" placeholder="Message">*@
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                }
                         
                                <div class="col-md-12 text-center">
                                    <button class="btn btn-primary btn-lg" type="submit">Save Message</button>
                                </div>

                   
                            



                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
    <!-- End: Content -->

</section>
}
