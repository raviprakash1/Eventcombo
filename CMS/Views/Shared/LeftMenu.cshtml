@model List<CMS.Models.LeftMenu>

<aside id="sidebar_left" class="nano nano-light affix">
    <div class="sidebar-left-content nano-content">
        <header class="sidebar-header">
            <div class="sidebar-widget author-widget">
                <div class="media">
                    <a class="media-left" href="#">
                        <img src="@{Html.RenderAction("UserImage", "Home");}" class="img-responsive">
                    </a>
                    <div class="media-body">
                        <div class="media-links">
                            <a href="#" class="sidebar-menu-toggle">User Menu</a>
                        </div>
                        <div class="media-author eml-ellps eml-ellps-wid">@{Html.RenderAction("UserName", "Home");}</div>
                    </div>
                </div>
            </div>
            <div class="sidebar-widget search-widget hidden">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-search"></i>
                    </span>
                    <input type="text" id="sidebar-search" class="form-control" placeholder="Search...">
                </div>
            </div>
        </header>
        <ul class="nav sidebar-menu">
            <li class="sidebar-label pt20">Menu</li>
            <li class="active">
                <a href="@Url.Action("Dashboard", "Home")">
                    <span class="fa fa-tachometer"></span>
                    <span class="sidebar-title">Dashboard</span>
                </a>
            </li>
            @foreach (var Permission in Model)
            {
                if (Permission.PermissionId == 10)
                {
                    <li>
                        <a href="@Url.Action("Users", "Users")">
                            <span class="fa fa-users"></span>
                            <span class="sidebar-title">Member Management</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 4)
                {
                    <li>
                        <a href="@Url.Action("EventsList", "ManageEvent")">
                            <span class="fa fa-cubes"></span>
                            <span class="sidebar-title">Manage Events</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ExpiredticketList", "ManageEvent")">
                            <span class="fa fa-recycle"></span>
                            <span class="sidebar-title">Expired Events</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 11)
                {
                    <li>
                        <a href="@Url.Action("Index", "FeeSetting")">
                            <span class="fa fa-usd"></span>
                            <span class="sidebar-title">Fee Settings</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 8)
                {
                    <li>
                        <a href="@Url.Action("EventType", "EventType", new { Type = "N" })">
                            <span class="fa fa-chain-broken"></span>
                            <span class="sidebar-title">Event Type</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 9)
                {
                    <li>
                        <a href="@Url.Action("EventCategory", "EventCategory", new { msg = "N" })">
                            <span class="fa fa-life-ring"></span>
                            <span class="sidebar-title">Event Category</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 12)
                {
                    <li>
                        <a href="@Url.Action("Index", "Article")">
                            <span class="fa fa-server"></span>
                            <span class="sidebar-title">Articles</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 13)
                {
                    <li>
                        <a href="@Url.Action("Index", "Orders")">
                            <span class="fa fa-pie-chart"></span>
                            <span class="sidebar-title">Ticket Orders</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 14)
                {
                    <li>
                        <a href="@Url.Action("Index", "BusinessPages")">
                            <span class="fa fa-server"></span>
                            <span class="sidebar-title">Business pages</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 15)
                {
                    <li>
                        <a href="@Url.Action("Footer", "Footer")">
                            <span class="fa fa-server"></span>
                            <span class="sidebar-title">Footer</span>
                        </a>
                    </li>
                }
            }
            <li class="sidebar-label pt20">Systems</li>
            @foreach (var Permission in Model)
            {
                if (Permission.PermissionId == 6)
                {
                    <li>
                        <a href="@Url.Action("Index", "Email", new { templatetag = "email_welcome", templatename = "Welcome" })">
                            <span class="fa fa-envelope-o"></span>
                            <span class="sidebar-title">Email Content Management</span>
                        </a>
                    </li>
                }
                if (Permission.PermissionId == 7)
                {
                    <li>
                        <a class="accordion-toggle" href="#">
                            <span class="fa fa-exclamation-circle"></span>
                            <span class="sidebar-title">UI Message</span>
                            <span class="caret"></span>
                        </a>
                        <ul class="nav sub-nav" style="">
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "MyAccount" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title">My Account Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "Login" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">Login Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "Signup" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">Sign Up Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "ForgotPassword" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">Forgot Password Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "ResetPassword" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">Reset Password Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "CreateEvent" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">Create Event Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "CMSUsers" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">CMSUsers Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "Messages" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">Messages Form</span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Messages", new { Form = "OrganizerMaster" })">
                                    <span></span>
                                    <span class="shw_menu sidebar-title act">Organizer Master Form</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            }
        </ul>
        <div class="sidebar-toggle-mini">
            <a href="#">
                <span class="fa fa-sign-out"></span>
            </a>
        </div>
    </div>
</aside>
