                    <input type="text" class="form-control" placeholder="Search..." value="Search...">
                </div>
            </form>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
{

                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown menu-merge">
