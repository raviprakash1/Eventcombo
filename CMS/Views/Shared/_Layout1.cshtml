                                </a>

                            </li>
                        </ul>
                    </li>
                </ul>
}
        </header>

        <!-- Start: Sidebar -->
       @{ Html.RenderAction("LeftMenu", "Home"); }
        <!-- End: Sidebar Left -->
        <!-- Start: Content-Wrapper -->
        @RenderBody()
    </div>
