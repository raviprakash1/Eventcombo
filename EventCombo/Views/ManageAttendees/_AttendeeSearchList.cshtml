@using System.Collections.Generic;
@using System.Linq;
@using EventCombo.Models;
@model List<AttendeeViewModel>
<link href="~/footable/css/footable.core.min.css" rel="stylesheet" />
<script src="~/footable/js/footable.all.min.js"></script>
<script src="~/footable/js/footable.filter.min.js"></script>
<table id="AttendeeSearchListTable" data-totalrecords="@(Model.Count())" class="table footable" data-page-navigation=".pagination" data-page-size="10">
    <thead>
        <tr>
            <th class="UETableHead" data-sorted="true" data-sort-ignore="true" data-sort="false"><input type="checkbox" onchange="CheckAll(this);" /></th>
            <th class="UETableHead"><a href="javascript:void(0);">Name</a></th>
            <th class="UETableHead"><a href="javascript:void(0);">Email</a></th>
        </tr>
    </thead>
    <tbody class="tableRecorsTBody">
        @foreach (var attendee in Model)
        {
            <tr>
                <td class="UETableTD">
                    <input name="TicketbearerIds" class="chkTicketbearerIds" checked="checked" type="checkbox" value="@attendee.TicketbearerId" />
                </td>
                <td class="UETableTD">@attendee.Name</td>
                <td class="UETableTD">@attendee.Email</td>
            </tr>
        }
    </tbody>
    <tfoot class="footer-menu">
        <tr>
            <td colspan="8">
                <nav class="text-right">
                    <ul class="pagination" id="ulpage"></ul>
                </nav>
            </td>
        </tr>
    </tfoot>
</table>
<script type="text/javascript">
        $(function () {
            $('.footable').footable();
        });
</script>