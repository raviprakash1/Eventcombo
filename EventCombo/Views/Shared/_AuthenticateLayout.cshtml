<body>

 
    <!-- Header -->
    <div class="home_fixed_header">
        <div class="container-fluid headr_main ">
            <div class="row">
                <div class="col-sm-5">
                    <a class="logo" href="/Home/Index"><img src=" ~/Images/EventCombo_Red.jpg" /></a>
                </div>

                <div class="col-sm-6 head_left_nav">
                    <ul class="navbar-right">

                        <li></li>
                        <li>@Html.Partial("_Logout")</li>


                    </ul>

                </div>
               
                <div class="col-sm-1 text-right">
                    <div class="social_icn" style="width:40px; margin-top:10px;">
                        <a href="http://www.facebook.com/Eventcombo" target="_blank"><img src="~/Images/fb.png" /></a>
                        <a href="http://www.twitter.com/Eventcombo" target="_blank"><img src="~/Images/tw.png" /></a>
                    </div>
                </div>
            </div>
            <div class="Fix_Head" title="Clik to fixed Header">
                <label class="switch">
                    <input type="checkbox" class="switch-input" checked>
                    <span class="switch-label" data-on="On" data-off="Off"></span>
                    <span class="switch-handle"></span>
                </label>
            </div>
        </div>
        <!-- Sub Header -->
        <div class="container-fluid cont_margin2">
            <div class="row cyan-line-new">
                <div class="col-sm-3">
                    <form>
                        <div class="input-group stylish-input-group">
                            <input type="text" class="form-control place_hold" onfocus="javascript:this.value=''" placeholder="Searh for Event">
                            <span class="input-group-addon">
                                <button type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
                <div class="col-sm-2 disc_title_head">
                    @Html.ActionLink("Discover Events", "EventCreation", "Event")

                </div>
                <div class="col-sm-2 disc_title_head">@Html.ActionLink("Get the Buzz", "GetBuzz", "Home")  </div>
                <div class="col-sm-5">
                    <div class="psst">
                        @Html.ActionLink("Create Event", "CreateEvent", "CreateEvent")
                    </div>
                  
                    @*<div class="psst">
                        <a class="" href="/Home/EventOraganizer">
