        <div>
            @RenderBody()
        </div>

        <!--Footer Section-->
        <div class="container-fluid foot_bg">
            <div class="col-sm-12 no-padding">
                <div class="col-sm-12 foot_logo">
                    <a class="" href="#"><img src="~/Images/logo_small.png" /></a>
