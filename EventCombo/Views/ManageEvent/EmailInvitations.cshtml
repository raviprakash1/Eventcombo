                            @Html.ActionLink(">", "EmailInvitations", new { eventId = ViewBag.EventId, sortOrder = "created_date" })
                            <span class="crt_evnt_drop_up"> <a href="#"><i class="fa fa-angle-up"></i></a> </span>
                            <span class="crt_evnt_drop_down"> <a href="#"><i class="fa fa-angle-down"></i></a> </span>
                        </div>
                        <div class="crt_inv_tableCell ">
                            Send On
