                            @Html.ActionLink("<", "EmailInvitations", new { eventId = ViewBag.EventId, sortOrder = "recipient_desc" })
                            @Html.ActionLink(">", "EmailInvitations", new { eventId = ViewBag.EventId, sortOrder = "recipient" })
