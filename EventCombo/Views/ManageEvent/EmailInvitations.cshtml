                <div class="crt_inv_table">
                    <div class="crt_inv_tablehead">
                        <div class="crt_inv_tableCell">
                            Subject
                            @Html.ActionLink("<", "EmailInvitations", new { eventId = ViewBag.EventId, sortOrder = "subject_desc" })
                            @Html.ActionLink("<", "EmailInvitations", new { eventId = ViewBag.EventId, sortOrder = "subject" })
