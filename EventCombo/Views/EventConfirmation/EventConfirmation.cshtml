      var url = '@Html.DisplayFor(m => m.url)';
      var description = '@Html.DisplayFor(m => m.Descritption)';
      return LinkedInShare(title, urlprefix + url, description);
    });

    $('.fbshare').click(function (e) {
      var url = '@Html.DisplayFor(m => m.url)';
      return FacebookShare(urlprefix + url)
    });
  });
</script>