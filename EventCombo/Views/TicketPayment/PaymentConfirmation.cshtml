                errormsg += "Invalid Email";
            }



            if (txt != '') {
                $('#id_orgtext').removeClass('err-bor');

            } else {
                $('#id_orgtext').addClass('err-bor');
                errormsg += "fill the details"
            }
            if (erroremail != "") {
                errormsg += erroremail;

            }
            if (errormsg != "") {

