@using System.Collections.Generic;
@using System.Linq;
@using EventCombo.Models;
@model EventOrderInfoListViewModel
@{
    Layout = null;
}
<title>HTML Order Report for  @Model.EventTitle | Eventcombo</title>
<div id="purchasedTicketContainer">
    <div class="table-responsive tableResponsiveOrderList">
        <table class="table" cellspacing="0" border="1" width="100%">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Order Date & Time</th>
                    <th>Attendee Name</th>
                    <th>Attendee Email</th>
                    <th>Attendee Phone</th>
                    <th>Ticket Name</th>
                    <th>Quantity</th>
                    <th>Manual Price Paid</th>
                </tr>
            </thead>
            <tbody class="tableRecorsTBody">
                @{
                    string tempOrderId = "";
                    foreach (var order in Model.Orders)
                    {
                        <tr>
                            @if(tempOrderId != order.OrderId)
                            {
                                <td class="UETableTD">@order.OrderId</td>
                                <td class="UETableTD">@(order.Date.ToString("MMM, dd, yyyy hh:mm:ss tt"))</td>
                                tempOrderId = order.OrderId;
                            }
                            else
                            {
                                <td class="UETableTD"></td>
                                <td class="UETableTD"></td>
                            }
                            <td class="UETableTD">@order.BuyerName</td>
                            <td class="UETableTD">@order.BuyerEmail</td>
                            <td class="UETableTD">@order.PhoneNumber</td>
                            <td class="UETableTD">@order.TicketName</td>
                            <td class="UETableTD">@order.Quantity</td>
                            <td class="UETableTD">$@order.PricePaid</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
