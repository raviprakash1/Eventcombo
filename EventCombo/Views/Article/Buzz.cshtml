@using System.Collections.Generic
@using EventCombo.Models
@using EventCombo.Service
@using System.Configuration
@model TwoListsOfSomething<ArticleShortViewModel>
@{
  ViewBag.Title = "The latest title of an article | Eventcombo";
}

<style type="text/css">
  .articleCarousalCls {
    position: relative;
    display: block;
    margin: 10px 0px;
  }

  .carItemConDivAnc {
    display: block;
  }

    .carItemConDivAnc img {
      width: 100%;
      height: 100%;
    }

  .carousel-control .icon-prev, .carousel-control .icon-next, .carousel-control .glyphicon-chevron-left, .carousel-control .glyphicon-chevron-right {
    top: 50%;
  }

  .carousel-control.right, .carousel-control.left {
    background: none;
  }

  .articleNewsCon {
    margin-top: 20px;
  }

  .articleConMainHeading {
    background: #00CAFD;
    color: #fff;
    padding: 6px 20px;
    font-size: 21px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 15px;
  }

  .articleNewsInner a {
    display: block;
    overflow: hidden;
  }

  .articleNewsInnerImg img {
    width: 100%;
    height: 100%;
    border: 1px solid #888;
  }

  .articleNewsInnerTitle {
    display: block;
    color: #000;
    font-weight: bold;
    font-size: 20px;
    margin: 0px 0px 10px 0px;
  }

  .articleNewsInnerDesp {
    display: block;
    color: #888;
    font-size: 14px;
  }

  .articleNewsInner {
    margin-bottom: 15px;
  }

  .articleTwitterFeedsHead {
    background: #ffcf1d;
    color: #fff;
    padding: 6px 10px;
    font-size: 18px;
    text-transform: uppercase;
    margin-bottom: 15px;
  }

  .articleNewsCon {
    margin-top: 20px;
    clear: both;
    overflow: hidden;
  }

  #myCarousel {
    clear: both;
    overflow: hidden;
    margin-bottom: 20px;
  }
</style>

<script type="text/javascript">

</script>





<div class="container-fluid cont_margin no-padding con_scr0l_home" id="entertainmentContainer">
  <div class="col-md-9 col-sm-9 col-xs-12 articleCarousalCls">
    <div id="myCarousel" class="carousel slide col-xs-12 no-padding" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        @for (var i = 0; i < 3; i++)
        {
          <div class="item @(i==0 ? "active" : "")">
            @for (var j = 0; j < 3; j++)
            {
              ArticleShortViewModel cur = null;
              string articleURL = "javascript:void(0)";
              if (Model.FirstList.Count > (i * 3 + j))
              {
                cur = Model.FirstList[i * 3 + j];
                articleURL = Url.Content(ArticleService.GetArticleUrl(cur.ArticleId, cur.Title));
              }
              <div class="col-xs-4 no-padding carItemConDiv">
                <a href="@articleURL" class="carItemConDivAnc">
                  <img src="@(cur == null ? "" : cur.ArticleImage)">
                  @(cur == null ? "" : cur.Title)
                </a>
              </div>
            }
          </div>
        }
      </div>

      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class="col-md-12 no-padding articleNewsCon">
      <div class="articleConMainHeading">The Buzzworthy</div>

      @foreach (var article in Model.SecondList)
      {
        var articleURL = Url.Content(ArticleService.GetArticleUrl(article.ArticleId, article.Title));
        <div class="col-md-6 col-sm-6 col-xs-12 articleNewsInner">
          <a href="@articleURL">
            <div class="col-md-3 col-sm-4 col-xs-4 articleNewsInnerImg">
              <img src="@article.ArticleImage" />
            </div>
            <div class="col-md-9 col-sm-8 col-xs-8 articleNewsInnerTxt">
              <h1 class="articleNewsInnerTitle">@article.Title</h1>
              <h4 class="articleNewsInnerDesp">@article.ShortBody</h4>
            </div>
          </a>
        </div>
      }

    </div>
  </div>

  <div class="col-md-3 col-sm-3 col-xs-12 articleTwitterFeeds">
    <div class="articleTwitterFeedsHead">Eventcombo tweet</div>
    <div class="twitterFeedsInner">
      <a class="twitter-timeline" href="https://twitter.com/EventCombo" data-widget-id="734133932380295168">Tweets by @@EventCombo</a>
      <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + "://platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } }(document, "script", "twitter-wjs");</script>
    </div>
  </div>
</div>
